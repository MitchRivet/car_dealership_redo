<h1>Here are your Cars:</h1>

{% if matching_cars is not empty %}
    <p>Here are all your cars:</p>
    {% for car in matching_cars %}
    {{ car.getModel }}</br>
    {{ car.getPrice }}</br>
    {{ car.getMiles }}</br>
    <img src='{{ car.getImage }}'></br></br>
    {% endfor %}

    <form action='/delete_tasks' method='POST'>
      <button type='submit'>Delete All Cars</button>
    </form>

{% endif %}
